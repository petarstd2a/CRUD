@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>@Model.Message</h1>


<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@employee.Id">Edit</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@employee.Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="./Create">Create</a>
</form>

